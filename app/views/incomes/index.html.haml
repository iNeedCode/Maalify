%h1
  = t('view.income.title')
  %small= link_to Member.find(params[:member_id]).full_name, member_path(params[:member_id])

%table.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= t('income.amount')
      %th= t('income.starting_date')
      %th
      %th
      %th
      
  %tbody
    - @incomes.each do |income|
      %tr
        %td= number_to_currency(income.amount, locale: :de)
        %td= I18n.l(income.starting_date, format: :long)
        %td
          =link_to member_income_path(params[:member_id], income.id), :title => "#{t('table.show')}" do
            %span.glyphicon.glyphicon-search        
        %td
          = link_to edit_member_income_path(params[:member_id], income.id), :title => "#{t('table.edit')}" do
            %span.glyphicon.glyphicon-edit            
        %td
          = link_to member_income_path(params[:member_id], income.id), :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => "#{t('table.delete')}" do
            %span.glyphicon.glyphicon-trash.color-red            


%br

= link_to t('view.income.new'), new_member_income_path, :class => "btn btn-primary"
