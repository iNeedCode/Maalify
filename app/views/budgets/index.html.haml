%h1
  = t('view.budget.title')

%table.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= t('view.budget.title')
      %th= t('view.budget.title')
      %th= t('budget.rest_promise_from_past_budget')
      %th= t('budget.remainingPromise')
  %tbody
    - @budget_overview.each do |budget|
      %tr
        %td= budget[:title]
        %td= number_to_currency budget[:promise]
        %td= number_to_currency budget[:rest_promise_from_past_budget]
        %td= number_to_currency budget[:remainingPromise]

%table#budget-table.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= t('budget.title')
      %th= t('budget.promise')
      %th= t('budget.start_date')
      %th= t('budget.end_date')
      %th= t('view.member.title')
      %th= t('view.donation.title')
      %th
      %th
      %th
      
  %tbody
    - @budgets.each do |budget|
      %tr
        %td= budget.title
        %td= number_to_currency(budget.promise, locale: :de)
        %td= budget.start_date.strftime("%d. %b %Y")
        %td= budget.end_date.strftime("%d. %b %Y")
        %td= budget.member.full_name
        %td= budget.donation.name
        %td
          =link_to budget, :title => "#{t('table.show')}" do
            %span.glyphicon.glyphicon-search
        %td
          = link_to edit_budget_path(budget), :title => "#{t('table.edit')}" do
            %span.glyphicon.glyphicon-edit
        %td
          = link_to budget, :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => "#{t('table.delete')}" do
            %span.glyphicon.glyphicon-trash.color-red

%br

= link_to "#{t('view.budget.new')}", new_budget_path, :class => "btn btn-primary"

