!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Maalify'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Maalify'}"}

    -# FAVICONS
    =favicon_link_tag '/favicons/apple-touch-icon-57x57.png', rel: 'apple-touch-icon', sizes: '57x57', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-60x60.png', rel: 'apple-touch-icon', sizes: '60x60', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-72x72.png', rel: 'apple-touch-icon', sizes: '72x72', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-76x76.png', rel: 'apple-touch-icon', sizes: '76x76', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-114x114.png', rel: 'apple-touch-icon', sizes: '114x114', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-120x120.png', rel: 'apple-touch-icon', sizes: '120x120', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-144x144.png', rel: 'apple-touch-icon', sizes: '144x144', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-152x152.png', rel: 'apple-touch-icon', sizes: '152x152', type: nil
    =favicon_link_tag '/favicons/apple-touch-icon-180x180.png', rel: 'apple-touch-icon', sizes: '180x180', type: nil
    =favicon_link_tag '/favicons/favicon-32x32.png', rel: 'icon', sizes: '32x32', type: nil
    =favicon_link_tag '/favicons/android-chrome-192x192.png', rel: 'icon', sizes: '192x192', type: 'image/png'
    =favicon_link_tag '/favicons/favicon-96x96.png', rel: 'icon', sizes: '96x96', type: 'image/png'
    =favicon_link_tag '/favicons/favicon-16x16.png', rel: 'icon', sizes: '16x16', type: 'image/png'
    =favicon_link_tag '/favicons/manifest.json', rel: 'manifest', type: nil
    =favicon_link_tag '/favicons/safari-pinned-tab.svg', rel: 'mask-icon', type: nil, color: "#5bbad5"
    %meta{content: "Maalify", name: "apple-mobile-web-app-title"}/
    %meta{content: "Maalify", name: "application-name"}/
    %meta{content: "#da532c", name: "msapplication-TileColor"}/
    %meta{content: "#{image_url('mstile-144x144.png')}", name: "msapplication-TileImage"}/
    %meta{content: "#ffffff", name: "theme-color"}/
    %meta{name: 'apple-mobile-web-app-capable', content: 'yes'}/
    %meta{name: 'apple-mobile-web-app-status-bar-style', content: 'white'}/

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
