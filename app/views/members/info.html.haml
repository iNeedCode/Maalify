- content_for :title do
  ="#{t('view.member.info')}"

- content_for :head do
  = javascript_include_tag "chartkick", "jsapi.js"

%p
  %ul.nav.nav-pills
    %li.active{:role => "presentation"}
      =link_to t('view.member.info'), info_members_path
    %li{:role => "presentation"}
      =link_to t('view.member.all'), members_path
    %li{:role => "presentation"}
      =link_to t('view.member.import'), import_page_members_path


%div.col-md-12
  %h1= t('view.member.info')

%div.col-md-12.well
  %h3= t('member.tanzeem')
  %center
    = pie_chart @tanzeem, height: '25em'

%div.col-md-12.well
  %h3
    = t('member.info.wassiyyat')
    %small
      = t('member.info.count_musi', quantity: @eligible_musi_count)
  %center
    = bar_chart chart_wassiyyat_data_members_path, stacked: true

%div.col-md-12.well
  %h3= t('member.occupation')
  %center
    = pie_chart @occupation, height: '25em'

%div.col-md-12.well
  %h3= t('member.info.monthly_proceeding')
  %center
    = bar_chart chart_monthly_proceeding_members_path


