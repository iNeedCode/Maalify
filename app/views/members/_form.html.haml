= form_for @member, :html => {:class => "form-horizontal"} do |f|
  - if @member.errors.any?
    #error_explanation
      %h2= "#{pluralize(@member.errors.count, "error")} prohibited this member from being saved:"
      %ul
        - @member.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :gender, t('member.gender'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :gender, %w(male female), {include_blank: true}, :class => "form-control selectpicker"
  .form-group
    = f.label :aims_id, t('member.aims_id'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :aims_id, :class => "form-control", placeholder: '12345'
  .form-group
    = f.label :first_name, t('member.first_name'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :first_name, :class => "form-control", placeholder: 'Max'
  .form-group
    = f.label :last_name, t('member.last_name'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :last_name, :class => "form-control", placeholder: 'Mustermann'
  .form-group
    = f.label :wassiyyat, t('member.wassiyyat'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.check_box :wassiyyat, :class => "form-control"
  .form-group#wassiyyat_number_wrap
    = f.label :wassiyyat_number, t('member.wassiyyat_number'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :wassiyyat_number, :class => "form-control"
  .form-group
    = f.label :date_of_birth, t('member.date_of_birth'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :date_of_birth, :class => "form-control datepicker-member",:placeholder => "01.01.2000"
  .form-group
    = f.label :street, t('member.street'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :street, :class => "form-control", placeholder: 'MusterstraÃŸe 1'
  .form-group
    = f.label :plz, t('member.plz'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.number_field :plz, :class => "form-control", placeholder: '64295'
  .form-group
    = f.label :city, t('member.city'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :city, :class => "form-control", placeholder: 'Darmstadt'
  .form-group
    = f.label :email, t('member.email'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :email, :class => "form-control", placeholder: 'text@example.com'
  .form-group
    = f.label :landline, t('member.landline'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :landline, :class => "form-control", placeholder: '06151 123456'
  .form-group
    = f.label :mobile_no, t('member.mobile_no'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :mobile_no, :class => "form-control", placeholder: '0174 2020200'
  .form-group
    = f.label :occupation, t('member.occupation'), class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :occupation, :class => "form-control", placeholder: 'Angesteller'
  .container-fluid
    .col-md-offset-2.col-md-3
      .form-group
        .actions
          = f.submit t('view.save'), :class => "btn btn-success btn-block"
