= form_for @donation_type do |f|
  - if @donation_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@donation_type.errors.count, "error")} prohibited this donation_type from being saved:"
      %ul
        - @donation_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :donation_type
    = f.text_field :donation_type
  .actions
    = f.submit 'Save'
